{
    "compilerOptions": {
      "module": "ESNext",
      "noImplicitAny": false,
      "target": "ESNext",
      "lib": ["ESNext"],
      "moduleResolution": "node",
      "removeComments": false,
      "sourceMap": true,
      "noLib": false,
      "declaration": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "skipLibCheck": true,
      "esModuleInterop": true
    },
    "exclude": [
      "node_modules",
      "src/*_test.ts",
      "dist"
    ],
    "include": [
      "src/**/*"
    ]
  }